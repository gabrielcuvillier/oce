#include <Standard_NoSuchObject.hxx>
#include <gp_Vec.hxx>
#include <gp_Pnt.hxx>

//=======================================================================
//function : Directions
//purpose  : 
//=======================================================================

inline void 
HLRProjector_Projector::Directions (gp_Vec2d& D1,
			       gp_Vec2d& D2,
			       gp_Vec2d& D3) const
{
  D1 = myD1;
  D2 = myD2;
  D3 = myD3;
}

//=======================================================================
//function : Perspective
//purpose  : 
//=======================================================================

inline Standard_Boolean HLRProjector_Projector::Perspective() const
{ return myPersp; }
