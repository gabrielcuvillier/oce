inline const gp_Trsf & HLRProjector_Projector::FullTransformation() const
{ return myScaledTrsf; }

//=======================================================================
//function : Focus
//purpose  : 
//=======================================================================

inline Standard_Real HLRProjector_Projector::Focus() const
{
  Standard_NoSuchObject_Raise_if
    (!myPersp,"HLRProjector_Projector::Not a Perspective");
  return myFocus;
}

//=======================================================================
//function : Transform
//purpose  : 
//=======================================================================

inline void HLRProjector_Projector::Transform (gp_Vec& D) const
{ D.Transform(myTrsf); }

//=======================================================================
//function : Transform
//purpose  : 
//=======================================================================

inline void HLRProjector_Projector::Transform (gp_Pnt& Pnt) const
{ Pnt.Transform(myTrsf); }
